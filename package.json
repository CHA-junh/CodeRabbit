{
	"name": "bist-new",
	"version": "1.0.0",
	"private": true,
	"workspaces": [
		"apps/*"
	],
	"scripts": {
		"clean": "npm run clean --workspaces && rimraf node_modules .next dist build coverage test-reports",
		"dev": "concurrently \"npm run dev --workspace=apps/client\" \"npm run start:dev --workspace=apps/server\"",
		"dev:client": "npm run dev --workspace=apps/client",
		"dev:server": "npm run start:dev --workspace=apps/server",
		"dev:all": "concurrently \"npm run dev:client\" \"npm run dev:server\"",
		"build": "npm run build --workspaces",
		"start": "npm run start --workspace=apps/server",
		"test": "jest",
		"test:watch": "jest --watch",
		"test:coverage": "jest --coverage",
		"test:debug": "jest --detectOpenHandles --forceExit",
		"test:server": "jest --config jest.server.config.js --json --outputFile=test-reports/server/jest-report.json",
		"test:server:watch": "jest --config jest.server.config.js --watch",
		"test:server:coverage": "jest --config jest.server.config.js --coverage",
		"test:server:excel": "npm run test:server && node scripts/convert-jest-to-excel.js --server",
		"check:db-env": "node scripts/check-db-env.js",
		"test:all": "concurrently \"npm test\" \"npm run test:server\"",
		"test:all:watch": "concurrently \"npm run test:watch\" \"npm run test:server:watch\"",
		"test:all:coverage": "concurrently \"npm run test:coverage\" \"npm run test:server:coverage\"",
		"test:client:json": "npm test -- --json --outputFile=test-reports/client/jest-report.json",
		"test:client:excel": "npm-run-all --sequential test:client:json convert:client:excel",
		"test:unified:excel": "npm test -- --json --outputFile=test-reports/jest-report.json && node scripts/convert-jest-to-excel.js --unified",
		"test:all:excel": "node scripts/run-all-tests.js",
		"convert:client:excel": "node scripts/convert-jest-to-excel.js --client",
		"convert:server:excel": "node scripts/convert-jest-to-excel.js --server",
		"convert:unified:excel": "node scripts/convert-jest-to-excel.js --unified",
		"convert:all:excel": "node scripts/convert-jest-to-excel.js --all",
		"test:all:unified-excel": "npm-run-all --sequential test:client:json test:server test:unified:excel",
		"test:COMZ010M00": "jest --testPathPatterns=COMZ010M00",
		"test:COMZ010M00:client": "jest --testPathPatterns=COMZ010M00 --testPathIgnorePatterns=server",
		"test:COMZ010M00:server": "jest --config jest.server.config.js --testPathPatterns=COMZ010M00",
		"test:COMZ010M00:excel": "npm run test:COMZ010M00:client && npm run test:COMZ010M00:server && node scripts/convert-jest-to-excel.js --COMZ010M00",
		"test:e2e": "playwright test",
		"test:e2e:ui": "playwright test --ui",
		"test:e2e:headed": "playwright test --headed",
		"test:e2e:debug": "playwright test --debug",
		"test:e2e:chromium": "playwright test --project=chromium",
		"test:e2e:firefox": "playwright test --project=firefox",
		"test:e2e:webkit": "playwright test --project=webkit",
		"test:e2e:mobile": "playwright test --project=\"Mobile Chrome\" --project=\"Mobile Safari\"",
		"test:e2e:install": "playwright install",
		"test:e2e:codegen": "playwright codegen",
		"test:e2e:excel": "npx playwright test && node scripts/convert-playwright-to-excel-with-image.js",
		"test:e2e:excel:noimg": "npx playwright test && node scripts/convert-playwright-to-excel.js",
		"test:all-with-e2e": "concurrently \"npm test\" \"npm run test:server\" \"npm run test:e2e\"",
		"convert:pw:excel": "node scripts/convert-playwright-to-excel-with-image.js"
	},
	"dependencies": {
		"@nestjs/config": "^4.0.2",
		"@nestjs/swagger": "^11.2.0",
		"@tanstack/react-query": "^5.0.0",
		"@types/bcrypt": "^6.0.0",
		"axios": "^1.6.0",
		"bcrypt": "^6.0.0",
		"class-validator": "^0.14.2",
		"dotenv": "^17.2.1",
		"exceljs": "^4.4.0",
		"express-rate-limit": "^8.0.1",
		"express-session": "^1.18.2",
		"helmet": "^8.1.0",
		"oracledb": "^6.8.0"
	},
	"devDependencies": {
		"@playwright/test": "^1.54.1",
		"@testing-library/jest-dom": "^6.6.3",
		"@testing-library/react": "^16.3.0",
		"@testing-library/user-event": "^14.6.1",
		"@types/jest": "^30.0.0",
		"@types/node": "^20.0.0",
		"@types/node-fetch": "^2.6.12",
		"@types/oracledb": "^6.6.1",
		"concurrently": "^8.2.2",
		"jest": "^30.0.5",
		"jest-html-reporter": "^4.3.0",
		"jest-json-reporter": "^1.2.2",
		"node-fetch": "^3.3.2",
		"npm-run-all": "^4.1.5",
		"rimraf": "^6.0.1",
		"ts-jest": "^29.4.0",
		"xlsx": "^0.18.5"
	}
}
